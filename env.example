# ============================================
# PixelVault - Environment Configuration
# ============================================
# Copy this file to .env.local and update with your PostgreSQL credentials
# Command: cp env.example .env.local

# Database Configuration (REQUIRED)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ImageStorage
DATABASE_USER=postgres
DATABASE_PASSWORD=your_postgres_password_here

# SSL Configuration (set to false for localhost)
DATABASE_SSL=false

# Optional Settings (you can leave these as default)
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_STATEMENT_TIMEOUT=120000
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000
